<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <div>{{#each comments as |comment|}}
    <p>{{comment_text}}</p>
    {{/each}}
  </div>
  
  <p>
    <a class="btn btn-primary" href="/comment/{{id}}">add comment</a>
  </p>
</div>
